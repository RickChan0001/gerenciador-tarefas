<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control?>
<?import javafx.scene.layout?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.gerenciadortarefas.controller.LoginController">
    <children>
        <Label text="Nome:" layoutX="20" layoutY="20"/>
        <TextField fx:id="usernameField" layoutX="80" layoutY="20" />
        
        <Label text="Senha:" layoutX="20" layoutY="60"/>
        <PasswordField fx:id="passwordField" layoutX="80" layoutY="60" />
        
        <Button text="Entrar" layoutX="80" layoutY="100" onAction="#handleLogin"/>
    </children>
</AnchorPane>