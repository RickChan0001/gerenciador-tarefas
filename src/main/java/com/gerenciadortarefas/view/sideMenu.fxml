<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="sideMenu" prefWidth="50.0" spacing="100.0" style="-fx-background-color: #e7e7e7;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gerenciadortarefas.controller.SideMenuComponentController">
    <Button fx:id="menuButton" onAction="#toggleMenu" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: transparent; -fx-cursor: hand;" underline="true">
      <graphic>
         <ImageView fitHeight="31.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@icons/menuIcon.png" />
            </image>
            <cursor>
               <Cursor fx:constant="OPEN_HAND" />
            </cursor>
         </ImageView>
      </graphic>
    </Button>
   <effect>
      <DropShadow />
   </effect>
</VBox>